ALTER TABLE airport_facilities
ADD COLUMN created_at_formatted VARCHAR(20);

UPDATE airport_facilities
SET created_at_formatted = TO_CHAR(created_at AT TIME ZONE 'UTC', 'HH12:MI AM');


UPDATE airport_facilities
SET created_at_formatted = TO_CHAR(created_at AT TIME ZONE 'UTC' AT TIME ZONE 'Asia/Kolkata', 'HH12:MI AM');

SELECT
    id,
    name,
    category,
    coordinates,
    description,
    TO_CHAR(created_at AT TIME ZONE 'UTC' AT TIME ZONE 'Asia/Kolkata', 'HH12:MI AM') AS created_at_formatted
FROM
    airport_facilities;




select * from airport_facilities